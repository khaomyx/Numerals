<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#F3C301" /> <!-- Background color when button is pressed -->
            <corners android:radius="12dp" /> <!-- Adjust the radius for rounded corners -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/mustard" /> <!-- Default background color -->
            <corners android:radius="12dp" /> <!-- Adjust the radius for rounded corners -->
            <stroke
                android:width="1dp"
                android:color="@color/black" />
        </shape>
    </item>
</selector>